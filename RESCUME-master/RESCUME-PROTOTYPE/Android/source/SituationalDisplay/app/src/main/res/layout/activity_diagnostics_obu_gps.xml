<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp" >
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="GPS"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="gone" />
    
   	<View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#555555"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:visibility="gone" />
   	
	<GridLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		android:paddingLeft="20dp"
	    tools:ignore="HardcodedText" >
	
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_column="0"
		    android:layout_gravity="right|top"
		    android:layout_row="0"
		    android:text="GPS Fix Status: "
		    android:textAppearance="?android:attr/textAppearanceSmall" />
		
		<TextView
		    android:id="@+id/diag_txtObuGpsFixStatus"
		    android:textColor="#ffffff"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_column="1"
		    android:layout_gravity="left|top"
		    android:layout_row="0"
		    android:textAppearance="?android:attr/textAppearanceSmall" />
		
		
		
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_column="0"
		    android:layout_gravity="right|top"
		    android:layout_row="1"
		    android:text="GPS Heading and Speed: "
		    android:textAppearance="?android:attr/textAppearanceSmall" />
		
		<TextView
		    android:id="@+id/diag_txtObuGpsHeadingSpeed"
		    android:textColor="#ffffff"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_column="1"
		    android:layout_gravity="left|top"
		    android:layout_row="1"
		    android:textAppearance="?android:attr/textAppearanceSmall" />
		
		
		
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_column="0"
		    android:layout_gravity="right|top"
		    android:layout_row="2"
		    android:text="GPS Active Satellites: "
		    android:textAppearance="?android:attr/textAppearanceSmall"
		    android:visibility="gone" />
		
		<TextView
		    android:id="@+id/diag_txtObuGpsActiveSatellites"
		    android:textColor="#ffffff"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_column="1"
		    android:layout_gravity="left|top"
		    android:layout_row="2"
		    android:textAppearance="?android:attr/textAppearanceSmall"
		    android:visibility="gone" />
		        
	</GridLayout>
</LinearLayout>