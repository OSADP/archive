<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="HardcodedText" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="1" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:layout_row="0"
            android:text="Vehicle Diagnostics"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/diag_txtVehState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="right|center_vertical"
            android:layout_row="0"
            android:text="-"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999999" />
    
	<GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:id="@+id/diag_layoutVehData" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="0"
            android:text="VIN: "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="gone" />

        <TextView
            android:id="@+id/diag_txtVehVin"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="gone" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="1"
            android:text="Speed: "
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/diag_txtVehSpeed"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="2"
            android:text="RPM: "
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/diag_txtVehRpm"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="3"
            android:text="Throttle: "
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/diag_txtVehThrottle"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="3"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="4"
            android:text="Mass Air Flow: "
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/diag_txtVehMaf"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="4"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="5"
            android:text="Air Temperature: "
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/diag_txtVehAirTemp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="5"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="6"
            android:text="Barometric Pressure: "
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/diag_txtVehPres"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="6"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="7"
            android:text="Brake Position: "
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/diag_txtBrakePosition"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="7"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="8"
            android:text="Steering Angle: "
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/diag_txtSteeringAngle"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="8"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="9"
            android:text="Wipers: "
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/diag_txtWipers"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="9"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="10"
            android:text="Long. Acceleration: "
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/diag_txtLongAccel"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="10"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="11"
            android:text="Lat. Acceleration: "
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/diag_txtLatAccel"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="11"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
	        
	</GridLayout>
    

</LinearLayout>