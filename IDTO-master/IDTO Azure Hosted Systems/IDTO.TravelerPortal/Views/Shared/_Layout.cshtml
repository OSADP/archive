@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html style="height: 100%; width: 100%; padding: 0px 0px 0px 0px; margin: 0px 0px 0px 0px; ">
<head>
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>@ViewBag.Title - Connect and Ride</title>
    <style>
        .grad {
            background-color: #18283C; /* fallback color if gradients are not supported */
            background-image: -webkit-linear-gradient(to bottom, #18283C 0px, #18283C 370px, #18283C 370px, #5A3056 100%); /* For Chrome and Safari */
            background-image: -moz-linear-gradient(to bottom, #18283C 0px, #18283C 370px, #18283C 370px, #5A3056 100%); /* For old Fx (3.6 to 15) */
            background-image: -ms-linear-gradient(to bottom, #18283C 0px, #18283C 370px, #18283C 370px, #5A3056 100%); /* For pre-releases of IE 10*/
            background-image: -o-linear-gradient(to bottom, #18283C 0px, #18283C 370px, #18283C 370px, #5A3056 100%); /* For old Opera (11.1 to 12.0) */
            background-image: linear-gradient(to bottom, #18283C 0px, #18283C 370px, #18283C 370px, #5A3056 100%); /* Standard syntax; must be last */

            background-attachment: fixed;

        }
    </style>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
</head>
<body class="grad" style="height: 100%; width: 100%; padding: 0px 0px 0px 0px; margin: 0px 0px 0px 0px;  ">
    <div style="height: 100%; width: 100%; padding: 0px 0px 0px 0px; margin: 0px 0px 0px 0px; background-image: url(../../Content/images/Background_Image_CMH.jpg); background-repeat: no-repeat; background-size: 1366px; background-position:top center; ">
        <table cellpadding=" 0" cellspacing="0" align="center" style="height: 100%; width: 100%; background-image: url(../../Content/images/Bokeh_Background.png); background-repeat: no-repeat; background-position: center top 370px; background-size: 1350px; ">
            <tr class="DoNotPrint" style="background-color: #18283C; height: 0px;">
                <td></td>
                <td height="0" width="144"></td>
                <td height="0" width="28"></td>
                <td height="0" width="144"></td>
                <td height="0" width="28"></td>
                <td height="0" width="144"></td>
                <td height="0" width="28"></td>
                <td height="0" width="144"></td>
                <td height="0" width="28"></td>
                <td height="0" width="144"></td>
                <td height="0" width="28"></td>
                <td height="0" width="144"></td>
                <td height="0" width="28"></td>
                <td height="0" width="144"></td>
                <td height="0" width="28"></td>
                <td height="0" width="144"></td>
                <td></td>
            </tr>
            <tr class="DoNotPrint" style="background-color: transparent; font-size: 11px; height:48px">
                <td />
                <td />
                <td />
                <td colspan="3" align="left" valign="bottom" style="background-color: #18283C; padding:0px 0px 0px 5px">
                    <a href="@Url.Action("Index", "Home")">
                        <img height="30" width="270" src="../Content/images/C-Ride_Logo.png" />
                    </a>
                </td>
                <td colspan="8" style="background-color: white; padding:0px 20px 0px 0px" align="right" valign="bottom">
                    <table style="color: black;" align="right">
                        <tr>
                            <td style="padding: 0px 12px 0px 12px" align="right" valign="bottom">
                                @Html.ActionLink("How it Works", "Index", "Home", null, new { @style = "color:black;" })
                            </td>
                            <td style="padding: 0px 12px 0px 12px" align="right" valign="bottom">
                                @Html.ActionLink("User Tips", "UserTips", "Home", null, new { @style = "color:black;" })
                            </td>
                            @if (Request.IsAuthenticated)
                            {
                                <td style="padding: 0px 12px 0px 12px" align="right" valign="bottom">
                                    @Html.ActionLink("Trips", "Index", "TripDashboard", null, new { @style = "color:black;" })
                                </td>
                            }
                            <td style="padding: 0px 12px 0px 12px" align="right" valign="bottom">
                                @Html.ActionLink("About", "About", "Home", null, new { @style = "color:black;" })
                            </td>
                            <td style="padding: 0px 0px 0px 12px" align="right" valign="bottom">@{Html.RenderAction("LoginWidget", "Account");}</td>
                        </tr>
                    </table>
                </td>
                <td />
                <td />
                <td />
            </tr>
            <tr class="DoNotPrint" style="background-color: transparent">
                <td class="DoNotPrint"></td>
                <td class="DoNotPrint"></td>
                <td class="DoNotPrint"></td>
                <td colspan="3" style="background-color: #18283C"></td>
                <td colspan="8" style="height: 2px; background-color: #F9AE40"></td>
                <td class="DoNotPrint"></td>
                <td class="DoNotPrint"></td>
                <td class="DoNotPrint"></td>
            </tr>
            <tr style="background-color: transparent; vertical-align: top; ">
                <td class="DoNotPrint"></td>
                <td class="DoNotPrint"></td>
                <td class="DoNotPrint"></td>
                <td class="DoNotPrint" colspan="3" style="background-color: #18283C; color: white; ">
                    <table style="width:100%; height:100%">
                        <tr style="height:25px">
                            <td width="50px" valign="top" align="center">
                            <td></td>
                        </tr>
                        <tr style="height: auto; ">
                            <td valign="top" align="center" style="background-image: url(../../Content/images/vertLine4pxOrange.png); background-position:center; background-repeat:repeat-y; background-size:auto; ">
                                <div style="background-color: #18283C">
                                    <div style="padding-top:0.7em;">
                                        <table>
                                            <tr>
                                                <td>
                                                    <div style="background-color:white; border:4px solid #F9AE40; width:16px; height:16px; border-radius:8px;"></div>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </td>
                            <td valign="top">
                                @Html.Action("WeatherPartial", "Weather")
                            </td>
                        </tr>
                        <tr style="height:20px; border-bottom: 1px solid #FFFFFF">
                            <td valign="top" style="background-image: url(../../Content/images/vertLine4pxOrange.png); background-position:center; background-repeat: repeat-y; background-size: auto; "></td>
                            <td></td>
                        </tr>
                        <tr style="height:40px;">
                            <td valign="top" style="background-image: url(../../Content/images/vertLine4pxOrange.png); background-position:center; background-repeat: repeat-y; background-size: auto; "></td>
                            <td></td>
                        </tr>
                        <tr style="height:auto">
                            <td valign="top" align="center" style="background-image: url(../../Content/images/vertLine4pxOrange.png); background-position:center; background-repeat: repeat-y; background-size: auto; ">
                                <table>
                                    <tr>
                                        <td>
                                            <div style="background-color: transparent">
                                                <div style="padding-top:0.7em;">
                                                    <table>
                                                        <tr>
                                                            <td>
                                                                <div style="background-color:white; border:4px solid #F9AE40; width:16px; height:16px; border-radius:8px;"></div>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                            <td id="NextTripOrLogin" valign="top">

                                @if (Request.IsAuthenticated)
                                {
                                    Html.RenderAction("NextTripPartial", "Home");
                                }
                                else
                                {
                                    if (TempData.ContainsKey("IsRegisterSelected"))
                                    {
                                        bool IsRegisterSelected = (bool)TempData["IsRegisterSelected"];
                                        TempData.Keep("IsRegisterSelected");
                                        if (!IsRegisterSelected)
                                        {
                                            Html.RenderAction("LoginPartial", "Account");
                                        }
                                        else
                                        {
                                            Html.RenderAction("RegisterPartial", "Account");
                                        }
                                    }
                                    else
                                    {
                                        Html.RenderAction("LoginPartial", "Account");
                                    }
                                }

                            </td>
                        </tr>
                        <tr style="height:100%;">
                            <td valign="top" style="background-image: url(../../Content/images/vertLine4pxOrange.png); background-position: center; background-repeat: repeat-y; background-size: auto; "></td>
                            <td></td>
                        </tr>
                    </table>

                </td>
                <td class="DoNotPrint"></td>
                <td align="center" valign="top" colspan="7">
                    <table>
                        <tr><td>@RenderBody()</td></tr>
                        <tr><td height="50px"></td></tr>
                    </table>
                </td>
                <td class="DoNotPrint"></td>
                <td class="DoNotPrint"></td>
                <td class="DoNotPrint"></td>
            </tr>
        </table>
    </div>
    <div style="width: 100%; padding: 0px 0px 0px 0px; margin: 0px 0px 0px 0px; background: #F7AC40; position: fixed; left: 0px; right: 0px; bottom: 0px; height: 34px; ">
        <table cellpadding=" 0" cellspacing="0" align="center" style="width: 100%; ">
                    <tr class="DoNotPrint" style="background-color: #18283C; height: 0px;">
                        <td style="height:0"></td>
                        <td height="0" width="144"></td>
                        <td height="0" width="28"></td>
                        <td height="0" width="144"></td>
                        <td height="0" width="28"></td>
                        <td height="0" width="144"></td>
                        <td height="0" width="28"></td>
                        <td height="0" width="144"></td>
                        <td height="0" width="28"></td>
                        <td height="0" width="144"></td>
                        <td height="0" width="28"></td>
                        <td height="0" width="144"></td>
                        <td height="0" width="28"></td>
                        <td height="0" width="144"></td>
                        <td height="0" width="28"></td>
                        <td height="0" width="144"></td>
                        <td style="height:0"></td>
                    </tr>
                    <tr style="background-color: #F7AC40; height: 34px">
                        <td></td>
                        <td colspan="2"></td>
                        <td colspan="11" style="color: white; font-size:9px" valign="middle">
                            <table align="left">
                                <tr>
                                    <td>
                                        <img width="130" height="11" src="../Content/images/Powered_by_BATTELLE.png" style="margin-bottom:2px" /> &copy;Battelle Memorial Institute 2014. All Rights Reserved.
                                    </td>
                                    <td width="20"></td>
                                    <td>
                                        <a href="https://www.facebook.com/connectandride"><img height="20" src="../Content/images/FB-f-Logo__blue_512.png" /></a>
                                    </td>
                                    <td width="20"></td>
                                    <td>
                                        <a href="https://twitter.com/connectride"><img height="20" src="../Content/images/Twitter_logo_blue.png" /></a>
                                    </td>
                                    <td width="20"></td>
                                    <td>
                                        <a href="http://instagram.com/connectandride"><img height="20" src="../Content/images/Instagram_Icon_Large.png" /></a>
                                    </td>
                                    <td width="20"></td>
                                    <td>
                                        <a href="https://www.youtube.com/user/ConnectandRide"><img height="30" src="../Content/images/YouTube-logo-full_color.png" /></a>
                                    </td>
                                </tr>
                            </table>
                        </td>
                        <td colspan="2"></td>
                        <td></td>
                    </tr>
                </table>
            </div>
            <div id="StudyTerms"  style="position: fixed;top: 0;left: 0;width: 100%;height: 100%;background-color: rgba(0,0,0,0.6);text-align: center; z-index: 101; visibility:hidden">
                <div id="StudyTermsContent" style="position: fixed;top: 5%;width: 100%;height: 80%;overflow: auto;-moz-border-radius: 10px;-webkit-border-radius: 10px;border-radius: 10px;z-index: 102;">
                    <table width="660" align="center" style="background: white; border-radius: 5px;  ">
                        <tr>
                            <td width="20px"></td>
                            <td>
                                @{Html.RenderAction("RegistrationAgreementPartial", "Home");}
                            </td>
                            <td width="20px"></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>
                                <table align="center">
                                    <tr>
                                        <td>
                                            @Html.ActionLink("Accept", "Register", "Account", new { returnUrl = Request.RawUrl.ToString() }, new { onclick = "document.getElementById('StudyTerms').style.visibility = 'hidden';", @class = "btn btn-IDTOdefault" })
                                        </td>
                                        <td width="40px"></td>
                                        <td>
                                            <a href="#" class="btn btn-IDTOdefault" onclick="document.getElementById('StudyTerms').style.visibility = 'hidden';">Cancel</a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td height="20px"></td>
                                    </tr>
                                </table>
                            </td>
                            <td></td>
                        </tr>
                    </table>
                </div>
            </div>

            @Scripts.Render("~/bundles/bootstrap")
            @Scripts.Render("~/bundles/placeholder")
            @RenderSection("scripts", required: false)

</body>
</html>

