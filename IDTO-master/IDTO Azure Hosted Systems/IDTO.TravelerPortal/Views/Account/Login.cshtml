@model IDTO.TravelerPortal.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    ViewBag.ReturnUrl = Request["ReturnUrl"]; 
}

<div style="margin-top: 152px">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <table width="660">
            <tr>
                <td>
                    <table id="loginForm" width="316" align="center">
                        <tr>
                            <td>
                                <table style="position: relative;" align="center">
                                    <tr>
                                        <td>
                                            <img width="40" height="40" src="../Content/images/Icon_Password.png" style="position:absolute; top: -20px; left:-20px" />
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                        <tr style="background-color: white;">
                            <td>
                                <table align="center" style="width:90%">
                                    <tr>
                                        <td align="left">
                                            <h3>@ViewBag.Title</h3>
                                            @Html.ValidationSummary(true)
                                        </td>
                                    </tr>
                                    <tr style="height:20px"><td></td></tr>
                                    <tr>
                                        <td align="left">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-IDTOcontrol", @placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(m => m.Email).ToHtmlString()) })
                                            @Html.ValidationMessageFor(m => m.Email)
                                        </td>
                                    </tr>
                                    <tr style="height:20px"><td></td></tr>
                                    <tr>
                                        <td align="left">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-IDTOcontrol", @placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(m => m.Password).ToHtmlString()) })
                                            @Html.ValidationMessageFor(m => m.Password)
                                        </td>
                                    </tr>
                                    <tr style="height:20px"><td></td></tr>
                                    <tr>
                                        <td align="left">
                                            @Html.CheckBoxFor(m => m.RememberMe)
                                            @Html.LabelFor(m => m.RememberMe)
                                        </td>
                                    </tr>
                                    <tr style="height:30px"><td></td></tr>
                                    <tr>
                                        <td align="center">
                                            <input id="SubmitLogin" type="submit" value="Log in" class="btn btn-IDTOdefault" />
                                        </td> 
                                    </tr>
                                    <tr style="height:10px"><td></td></tr>
                                    <tr>
                                        <td align="left">
                                            @Html.ActionLink("Register", "Register", "Account", null, new { @style = "color:black ; text-decoration: underline" })  if you don't have a local account.
                                        </td>
                                    </tr>
                                    <tr style="height:20px"><td></td></tr>
                                </table>
                            </td>
                        </tr>
                        <tr style="height: 5px; background-color: #F9AE40">
                            <td></td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    }
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }