@model IDTO.TravelerPortal.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
    ViewBag.ReturnUrl = Request["ReturnUrl"]; 
}

<div style="margin-top: 152px">
    @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <table width="660">
            <tr>
                <td>
                    <table id="registerForm" width="316" align="center">
                            <tr>
                                <td>
                                    <table style="position: relative;" align="center">
                                        <tr>
                                            <td>
                                                <img width="40" height="40" src="../Content/images/Icon_Account.png" style="position:absolute; top: -20px; left:-20px" />
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                            <tr style="background-color: white;">
                                <td>
                                    <table align="center" style="width:90%" cellpadding="5">
                                        <tr>
                                            <td align="left">
                                                <h3>@ViewBag.Title</h3>
                                                @Html.ValidationMessage("", new { })
                                            </td>
                                        </tr>
                                        <tr style="height:20px"><td></td></tr>
                                        <tr>
                                            <td align="left">
                                                @{
                                                    if (Model != null)
                                                    {
                                                        if (Model.FirstName == "")
                                                        {
                                                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-IDTOcontrol", @placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(m => m.FirstName).ToHtmlString()) })
                                                        }
                                                        else
                                                        {
                                                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-IDTOcontrol", @Value = Model.FirstName })
                                                        }
                                                    }
                                                    else
                                                    {
                                                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-IDTOcontrol", @placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(m => m.FirstName).ToHtmlString()) })
                                                    }
                                                }
                                                @Html.ValidationMessageFor(m => m.FirstName)
                                            </td>
                                        </tr>
                                        <tr style="height:20px"><td></td></tr>
                                        <tr>
                                            <td align="left">
                                                @{
                                                    if (Model != null)
                                                    {
                                                        if (Model.LastName == "")
                                                        {
                                                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-IDTOcontrol", @placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(m => m.LastName).ToHtmlString()) })
                                                        }
                                                        else
                                                        {
                                                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-IDTOcontrol", @Value = Model.LastName })
                                                        }
                                                    }
                                                    else
                                                    {
                                                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-IDTOcontrol", @placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(m => m.LastName).ToHtmlString()) })
                                                    }
                                                }
                                                @Html.ValidationMessageFor(m => m.LastName)
                                            </td>
                                        </tr>
                                        <tr style="height:20px"><td></td></tr>
                                        <tr>
                                            <td align="left">
                                                @{
                                                    if (Model != null)
                                                    {
                                                        if (Model.Email == "")
                                                        {
                                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-IDTOcontrol", @placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(m => m.Email).ToHtmlString()) })
                                                        }
                                                        else
                                                        {
                                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-IDTOcontrol", @Value = Model.Email })
                                                        }
                                                    }
                                                    else
                                                    {
                                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-IDTOcontrol", @placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(m => m.Email).ToHtmlString()) })
                                                    }
                                                }
                                                @Html.ValidationMessageFor(m => m.Email)
                                            </td>
                                        </tr>
                                        <tr style="height:20px"><td></td></tr>
                                        <tr>
                                            <td align="left">
                                                @Html.PasswordFor(m => m.Password, new { @class = "form-IDTOcontrol", @placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(m => m.Password).ToHtmlString()) })
                                                @Html.ValidationMessageFor(m => m.Password)
                                            </td>
                                        </tr>
                                        <tr style="height:20px"><td></td></tr>
                                        <tr>
                                            <td align="left">
                                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-IDTOcontrol", @placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(m => m.ConfirmPassword).ToHtmlString()) })
                                                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                                            </td>
                                        </tr>
                                        <tr style="height:30px"><td></td></tr>
                                        <tr>
                                            <td align="center">
                                                <input type="submit" value="Create Account" class="btn btn-IDTOdefault" />
                                            </td>
                                        </tr>
                                        <tr style="height:20px"><td></td></tr>
                                        <tr>
                                            <td align="left">
                                                @Html.ActionLink("Log in", "Login", "Account", null, new { @style = "color:black; text-decoration: underline" }) if you already have an account.
                                            </td>
                                        </tr>
                                        <tr style="height:20px"><td></td></tr>
                                    </table>
                                </td>
                            </tr>
                            <tr style="height: 5px; background-color: #F9AE40">
                                <td></td>
                            </tr>
                        </table>
                </td>
            </tr>
        </table>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
