@model IDTO.TravelerPortal.Models.ForgotPasswordViewModel

@{
    ViewBag.Title = "Forgot Password";
}

<div style="margin-top: 152px">
    @using (Html.BeginForm("SendLoginEmail", "Account", FormMethod.Get, new { }))
    {
        @Html.AntiForgeryToken()

        <table width="660">
            <tr>
                <td>
                    <table id="registerForm" width="316" align="center" style="box-shadow: 3px 3px 4px #000000;">
                        <tr>
                            <td>
                                <table style="position: relative;" align="center">
                                    <tr>
                                        <td>
                                            <img width="40" height="40" src="../Content/images/Icon_Password.png" style="position:absolute; top: -20px; left:-20px" />
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                        <tr style="background-color: white;">
                            <td>
                                <table align="center" style="width:90%" cellpadding="5">
                                    <tr style="height:20px"><td></td></tr>
                                    <tr>
                                        <td align="left" valign="top" style="font-size: 24px; color: #5A3056; ">
                                            @ViewBag.Title
                                        </td>
                                    </tr>
                                    <tr style="height:20px"><td></td></tr>
                                    <tr style="height:20px"><td align="left" style=" color: #6E6E6E">Please enter your email address (username). We will email you instructions to login. </td></tr>
                                    <tr style="height:10px"><td></td></tr>
                                    <tr>
                                        <td align="left">
                                            @{
        if (Model != null)
        {
            if (Model.Email == null)
            {
                @Html.TextBoxFor(m => m.Email, new { @class = "form-IDTOcontrol", @placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(m => m.Email).ToHtmlString()) })
            }
            else
            {
                if (Model.Email == "")
                {
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-IDTOcontrol", @placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(m => m.Email).ToHtmlString()) })
                }
                else
                {
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-IDTOcontrol", @Value = Model.Email })
                }
            }
        }
        else
        {
                @Html.TextBoxFor(m => m.Email, new { @class = "form-IDTOcontrol", @placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(m => m.Email).ToHtmlString()) })
        }
                                            }
                                            @Html.ValidationMessageFor(m => m.Email)
                                        </td>
                                    </tr>
                                    <tr style="height:30px"><td></td></tr>
                                    <tr>
                                        <td align="center">
                                            <input type="submit" value="Send Email" class="btn btn-IDTOdefault" />
                                        </td>
                                    </tr>
                                    <tr style="height:20px"><td></td></tr>
                                </table>
                            </td>
                        </tr>
                        <tr style="height: 5px; background-color: #F9AE40">
                            <td></td>
                        </tr>
                    </table>

                </td>
            </tr>
        </table>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
