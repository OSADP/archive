@model IDTO.TravelerPortal.Models.UpcomingTripsViewModel

@{
    ViewBag.Title = "Upcoming Trips";
}

<div style="margin-top: 28px">

    <table width="660" style="background-color: white; box-shadow: 3px 3px 4px #000000;">
        <tr style="border-bottom: 1px solid #6E6E6E; ">
            <td align="left" valign="top" style="font-size: 24px; color: #5A3056; padding-left:2%">
                @ViewBag.Title
            </td>
            <td align="right">
                <div style="padding-right: 2em">@Html.ActionLink("Return to Trips", "Index", "TripDashboard", null, new { @style = "color:black; text-decoration:underline; font-size:10px" })</div>
            </td>
        </tr>
        <tr style="background-color: white;">
            <td colspan="2" height="30px" align="left" valign="middle" style="font-size: 14px; color: black; padding-left:2%">

                @if (Model.Trips == null)
                {
                    @:No upcoming Trips
                }

            </td>
        </tr>
        <tr style="height: 5px; background-color: #F9AE40">
            <td colspan="2"></td>
        </tr>
    </table>
    <table width="660">
        <tr style="height: 28px; background-color: transparent">
            <td></td>
        </tr>
    </table>
    <table width="660">
        <tr style="background-color: transparent;">
            <td>
                @if (Model.Trips != null)
                {
                    @Html.Partial("~/Views/Search/UpcomingTripsPartial.cshtml", Model)
                }

            </td>
        </tr>
    </table>
</div>
