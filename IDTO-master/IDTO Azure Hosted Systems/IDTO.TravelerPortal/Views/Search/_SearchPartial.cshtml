@model IDTO.TravelerPortal.Models.TripSearchCriteria

@using (Html.BeginForm("Search", "Search", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <table width="316" align="center" style="box-shadow: 3px 3px 4px #000000;">
        <tr>
            <td>
                <table style="position: relative;" align="center">
                    <tr>
                        <td>
                            <img width="40" height="40" src="../Content/images/Icon_PlanaTrip.png" style="position:absolute; top: -20px; left:-20px" />
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr style="background-color: white;">
            <td>
                <table align="center" style="width:90%">
                    <tr>
                        <td align="left">
                            <div style="padding-top: 1.25em; color: #5A3056; font-size: 24px">Plan a Trip</div>
                            @Html.ValidationSummary(true)
                        </td>
                    </tr>
                    <tr style="height:20px"><td></td></tr>
                    <tr>
                        <td align="left">
                            @Html.TextBoxFor(model => model.startLocation, new { @class = "form-IDTOcontrol", @placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(model => model.startLocation).ToHtmlString()) })
                            @Html.ValidationMessageFor(model => model.startLocation)
                        </td>
                    </tr>
                    <tr style="height:20px"><td></td></tr>
                    <tr>
                        <td align="left">
                            @Html.TextBoxFor(model => model.endLocation, new { @class = "form-IDTOcontrol", @placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(model => model.endLocation).ToHtmlString()) })
                            @Html.ValidationMessageFor(model => model.endLocation)
                        </td>
                    </tr>
                    <tr style="height:20px"><td></td></tr>
                    <tr>
                        <td align="left">
                            @Html.TextBoxFor(model => model.time, new { @class = "form-IDTOcontrol", @id = "DateField", @Value = Model.time.ToString("MM/dd/yyyy hh:mm tt").ToLower() })
                            @Html.ValidationMessageFor(model => model.time)
                        </td>
                    </tr>
                    <tr style="height:30px"><td></td></tr>
                    <tr>
                        <td align="center">
                            <input type="submit" value="Search" class="btn btn-IDTOdefault" />
                        </td>
                    </tr>
                    <tr style="height:20px"><td></td></tr>
                </table>
            </td>
        </tr>
        <tr style="height: 5px; background-color: #F9AE40">
            <td></td>
        </tr>
    </table>
    <script>
        $(function () {
            $('#DateField').datetimepicker({
                timeFormat: "hh:mm tt"
            });
        });
    </script>
}
